{$R *.dfm}
procedure TForm1.createXml ;
begin
  XmlDocument1.Active := true;
  with XmlDocument1 do
  begin
    // создаем корневой узел
    with AddChild ('Data') do
    begin

      // создаем дочерний узел
      with AddChild ('Contragent') do
      begin
      // дочерние элементы
        ChildValues ['INN'] := 1;
        with AddChild ('Agreement') do
        begin
          ChildValues ['AgreementNo'] := '123456';
          ChildValues ['Status'] := '¬ производстве';
        end;
      end; // with
      with AddChild ('Contragent') do
      begin
      // дочерние элементы
        ChildValues ['INN'] := 2;
        with AddChild ('Agreement') do
        begin
          ChildValues ['AgreementNo'] := '123457';
          ChildValues ['Status'] := 'ƒоставлен';
        end;

      end; // with

    end; // with
//    with AddChild ('Data2') do
//    begin
//      // создаем дочерний узел
//      with AddChild ('User2') do
//      begin
//      // дочерние элементы
//      ChildValues ['Id'] := 2;
//      ChildValues ['Name'] := 'Ќаблюдатель2';
//      ChildValues ['Status'] := 'Developer1';
//
//      end; // with
//
//    end;

  end; // with: создаем

    // записываем
  XmlDocument1. SaveToFile ('Example1.xml');

    // обрати внимание, что объект Xml самосто€тельно не уничтожаем, т.к.
    // он уничтожитс€ автоматически при выходе из этой процедуры
end;

end.
